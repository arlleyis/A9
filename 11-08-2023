public function nome() 
{
echo "nome <br>";
} 
public function idade() 
{
echo "idade <br>";
} 
public function CorDosOhos() 
{
echo "CorDosOhos <br>";
} 
public function gênero() 
{
echo "gênero <br>";
} 
public function altura() 
{
echo "altura <br>";
} 
public function peso() 
{
echo "peso <br>";
}
$Davi = new Pessoa()
