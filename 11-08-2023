<?php

$nome = DavideOliveira;
$idade = 28;
$CorDosOlhos = Preto;
$gênero = Mascuino;
$Altura = 1.78;
$peso = 98-kg;

class   Pessoa {
  //Atributos 
  public $nome;
  public $idade;
  public $CorDosOlhos;
  public $gênero;
  public $altura;
  public $peso;

//Métodos
public function setnome() 
{
$this-> nome = $nome;
} 
public function getnome() 
{
return $this->nome;
} 
public function setidade() 
{
$this-> idade = $idade;
} 
public function getidade() 
{
return $this->idade;
} 
public function setCorDosOhos() 
{
$this-> CorDosOlhos = $CorDosOlhos;
} 
public function getCorDosOhos() 
{
return $this->CorDosOlhos;
} 
public function setgênero() 
{
$this-> gênero = $ênero;
} 
public function getgênero() 
{
return $this->gênero;
} 
public function setaltura() 
{
$this-> altura = $altura;
} 
public function getaltura() 
{
return $this->altura;
} 
public function setpeso() 
{
$this-> peso = $peso;
} 
public function getpeso() 
{
return $this->peso;
} 
}
